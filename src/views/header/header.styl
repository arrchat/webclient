// header view
@import 'theme'
@import 'dimensions'

.header
  color: theme.base
  height: dimensions.header.height
  width: dimensions.header.width
  border-bottom: 1px solid theme.gray
  .logo
    font-weight 900
    font-size 3em
    line-height: dimensions.header.height - dimensions.header.padding * 2
    margin: dimensions.header.padding 0
    width: dimensions.page.conversations.width
    float left
    display flex
    justify-content center
    border-right: 1px solid theme.gray
    img
      size: dimensions.header.height - dimensions.header.padding * 2
      margin: 0 dimensions.header.padding 0 0
      float left
  .right
    float right
    margin: dimensions.header.padding dimensions.section.padding
    display flex
    a
      font-size 1.6em
      font-weight 100
      color: theme.text
      line-height: dimensions.header.height - dimensions.header.padding * 2
      margin: 0 dimensions.header.padding
      display flex
      align-items center
      img
        width: dimensions.header.icon.size
        margin-right: dimensions.section.small-pad
