@import 'theme'
@import 'dimensions'

// conversations view
.conversations
  border-right: 1px solid theme.gray
  height: s('calc(100vh - %s - %s)', dimensions.header.height, dimensions.page.conversations.search)
  margin-bottom: dimensions.page.conversations.search
  width: dimensions.page.conversations.width
  overflow-y auto
  position relative

  :last-child
    border 0
