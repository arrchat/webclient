@import 'theme'
@import 'dimensions'

// conversations view
.conversations
  border-right: 1px solid theme.gray
  height: s('calc(100vh - %s - %s)', dimensions.header.height, dimensions.page.conversations.search)
  margin-bottom: dimensions.page.conversations.search
  width: dimensions.page.conversations.width
  position relative
  overflow-y auto
  .hat
    display block
    position absolute
    bottom 0
    left 0
    right 0
    top 0
    background asset('arrhat.svg') 0 100% / 100% no-repeat
    pointer-events none
