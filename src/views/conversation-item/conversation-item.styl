@import 'theme'
@import 'dimensions'
@import 'position'

// conversation-item view
.conversation-item
  padding: dimensions.section.padding
  border-bottom: 1px solid theme.gray
  display flex
  align-items center
  justify-content space-between
  background #fff
  .info
    display flex
    align-items center
    .icon
      background asset('favicon.svg') 50% / cover no-repeat
      size: dimensions.page.conversations.icon.size
      border-radius 50%
      margin-right: dimensions.section.padding
      position relative
      .status
        size: dimensions.page.conversations.icon.status.size
        absolute: _, dimensions.page.conversations.icon.status.border * -1, dimensions.page.conversations.icon.status.border * -1, _
        border-radius 50%
        background: theme.gray
        box-shadow inset 4px -3px 0 0 rgba(#000, .2)
        border: dimensions.page.conversations.icon.status.border solid #fff
    .name
      color: theme.text-visible
      font-size 1.3em
      .last-message
        color: theme.text
        padding-top: dimensions.section.small-pad
        font-size .8em
  &.online
    .info
      .icon
        .status
          background: theme.status.online
  &.message
    .name
      color: theme.base
