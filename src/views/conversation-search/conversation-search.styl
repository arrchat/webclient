@import 'theme'
@import 'dimensions'
@import 'position'

// conversation-search view
.conversation-search
  input
    absolute 0 0
    background #fff
    border 0
    color: theme.text-visible
    opacity 0
    padding: dimensions.section.padding
    pointer-events none
    transform: s('translateX(-%s)', dimensions.section.padding)
    transition transform .25s ease, opacity .25s ease
    width 100%

  &.focus input
    transform translateX(0)
    opacity 1
    pointer-events all
