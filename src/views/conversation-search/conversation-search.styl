@import 'theme'
@import 'dimensions'
@import 'position'

// conversation-search view
.conversation-search
  border-top: 1px solid theme.gray
  border-right: 1px solid theme.gray
  height: dimensions.page.conversations.search
  background #fff
  fixed _ _ 0
  z-index 3
  width: dimensions.page.conversations.width
  input
    padding: dimensions.section.padding
    color: theme.text-visible
    width 100%
    border 0
    background #fff
