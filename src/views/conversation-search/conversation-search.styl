@import 'theme'
@import 'dimensions'
@import 'position'

// conversation-search view
.conversation-search
  input
    absolute 0 0
    padding: dimensions.section.padding
    color: theme.text-visible
    width 100%
    border 0
    background #fff
    pointer-events none
    opacity 0
    transform: s('translateX(-%s)', dimensions.section.padding)
    transition transform .25s ease, opacity .25s ease
  &.focus
    input
      transform translateX(0)
      opacity 1
      pointer-events all
